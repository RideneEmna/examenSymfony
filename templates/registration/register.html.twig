{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <form method="post" class="form-signin">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>

                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}
                        <div class="form-group">
                            <label for="inputEmail" class="sr-only">Email address</label>
                            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email address'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="inputPassword" class="sr-only">Password</label>
                            {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                        </div>

                        <div class="form-group form-check">
                            {{ form_row(registrationForm.agreeTerms) }}
                        </div>

                        <div class="form-group form-check">
                            {{ form_label(registrationForm.roles, 'Select Role', {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_widget(registrationForm.roles, {'attr': {'class': 'form-check-input'}}) }}
                        </div>
                        <br/><br/>
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
                    {{ form_end(registrationForm) }}
                </form>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-6">
                <p class="text-center">Already have an account? <a href="{{ path('app_login') }}">Login</a></p>
            </div>
        </div>
    </div>
{% endblock %}
